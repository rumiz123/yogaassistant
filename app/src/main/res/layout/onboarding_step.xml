<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center">

        <!-- Step Title -->
        <TextView
            android:id="@+id/stepTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step Title"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Step Description -->
        <TextView
            android:id="@+id/stepDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step description goes here"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:alpha="0.8"
            android:gravity="center"
            android:layout_marginBottom="48dp" />

        <!-- Name Input (for step 1) -->
        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your name"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:alpha="0.7"
            android:background="@drawable/rounded_box"
            android:padding="16dp"
            android:textSize="16sp"
            android:visibility="gone" />

        <!-- Profile Picture Section (for step 2) -->
        <LinearLayout
            android:id="@+id/profilePictureSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/profilePicPreview"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_avatar_placeholder"
                android:scaleType="centerCrop"
                android:background="@drawable/ic_account_circle_black_24dp"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/selectPhotoButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Select Photo"
                android:textColor="@color/white"
                android:background="@drawable/rounded_button"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/noPhotoButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="No Profile Picture"
                android:textColor="@color/white"
                android:background="@drawable/rounded_button" />

        </LinearLayout>

        <!-- Referral Spinner (for step 3) -->
        <Spinner
            android:id="@+id/referralSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_box"
            android:padding="16dp"
            android:visibility="gone" />

        <!-- Level Spinner (for step 4) -->
        <Spinner
            android:id="@+id/levelSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_box"
            android:padding="16dp"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView> 