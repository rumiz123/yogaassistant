<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_medium"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:cardBackgroundColor="@color/card_background"
    app:strokeWidth="1dp"
    app:strokeColor="@color/card_background_accent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/card_padding"
        android:gravity="center_vertical">

        <!-- Avatar with Border -->
        <FrameLayout
            android:layout_width="@dimen/avatar_size_large"
            android:layout_height="@dimen/avatar_size_large"
            android:background="@drawable/circular_button"
            android:padding="3dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_avatar_placeholder"
                android:scaleType="centerCrop" />

        </FrameLayout>

        <!-- User Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/spacing_medium">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <ImageView
                    android:id="@+id/ivVerified"
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:src="@drawable/ic_verified"
                    android:layout_marginStart="@dimen/spacing_xsmall"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level 1 â€¢ 0 pts"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_small"
                android:layout_marginTop="@dimen/spacing_xsmall"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friend"
                android:textColor="@color/success_green"
                android:textSize="@dimen/text_size_xsmall"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="@dimen/spacing_xsmall" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/spacing_medium">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAction1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height_small"
                android:text="Accept"
                android:textSize="@dimen/text_size_small"
                android:background="@drawable/button_primary_gradient"
                android:textColor="@color/white"
                android:layout_marginEnd="@dimen/spacing_small"
                android:fontFamily="sans-serif-medium"
                app:cornerRadius="@dimen/button_corner_radius" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAction2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height_small"
                android:text="Reject"
                android:textSize="@dimen/text_size_small"
                android:background="@drawable/button_red_rounded"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                app:cornerRadius="@dimen/button_corner_radius" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnChallenge"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height_small"
                android:text="Challenge"
                android:textSize="@dimen/text_size_small"
                android:background="@drawable/button_secondary_gradient"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                app:cornerRadius="@dimen/button_corner_radius"
                android:layout_marginStart="@dimen/spacing_small"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 