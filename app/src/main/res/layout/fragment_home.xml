<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:fillViewport="true"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Settings button at top right -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/button_settings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/circular_button"
                android:contentDescription="Settings"
                android:padding="12dp"
                android:src="@drawable/ic_settings"
                android:tint="@color/white" />
        </RelativeLayout>

        <!-- Account Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:id="@+id/account_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="32dp">

                <!-- Profile pic + Name with Verified & Edit Icons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Profile picture -->
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image_profile"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="Profile picture"
                        android:padding="4dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_avatar_placeholder" />

                    <!-- Display name -->
                    <TextView
                        android:id="@+id/text_display_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:textColor="@color/text_primary"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <!-- Verified checkmark -->
                    <ImageView
                        android:id="@+id/icon_verified"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_verified"
                        android:visibility="gone" />

                    <!-- Edit name -->
                    <ImageView
                        android:id="@+id/icon_edit_name"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Edit name"
                        android:padding="4dp"
                        android:src="@drawable/ic_edit"
                        android:tint="@color/theme_purple" />
                </LinearLayout>

                <!-- UID -->
                <TextView
                    android:id="@+id/text_user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.7"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif" />

                <!-- Email -->
                <TextView
                    android:id="@+id/text_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium" />

                <!-- Email Verified -->
                <TextView
                    android:id="@+id/text_email_verified"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:alpha="0.7"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif" />

                <!-- Send Verification Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_send_verification"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/button_primary_gradient"
                    android:elevation="8dp"
                    android:text="VERIFY EMAIL"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:fontFamily="sans-serif-medium" />

                <!-- Provider ID -->
                <TextView
                    android:id="@+id/text_provider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:alpha="0.6"
                    android:textColor="@color/text_tertiary"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Profile Badges Row -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_profile_badges"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="24dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:clipToPadding="false"
            android:orientation="horizontal" />

        <!-- Quick Stats Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/card_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Your Progress"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <!-- Stats Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Workouts Completed -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/theme_purple"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Workouts"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>

                    <!-- Streak -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/theme_purple"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Day Streak"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>

                    <!-- Calories -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/theme_purple"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calories"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_start_workout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/button_primary_gradient"
                android:elevation="8dp"
                android:text="Start New Workout"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_view_progress"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/button_secondary_gradient"
                android:elevation="4dp"
                android:text="View Progress"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
