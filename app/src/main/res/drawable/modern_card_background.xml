<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/overlay_dark" />
            <corners android:radius="@dimen/card_corner_radius" />
        </shape>
    </item>
    <!-- Card background -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/card_background"
                android:centerColor="@color/card_background_light"
                android:endColor="@color/card_background_lighter"
                android:type="linear" />
            <corners android:radius="@dimen/card_corner_radius" />
        </shape>
    </item>
</layer-list> 